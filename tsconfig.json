{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2021"],
    "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "paths": {
      "components/*": ["./src/components/*"],
      "assets/*": ["./src/assets/*"],
      "config/*": ["./src/config/*"],
      "constants/*": ["./src/constants/*"],
      "core/*": ["./src/core/*"],
      "data/*": ["./src/data/*"],
      "modules/*": ["./src/modules/*"],
      "queries/*": ["./src/queries/*"],
      "relay/*": ["./src/relay/*"],
      "store/*": ["./src/store/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
